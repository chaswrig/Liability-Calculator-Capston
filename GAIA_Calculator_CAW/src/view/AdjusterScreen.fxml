<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdjusterController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0">
         <children>
            <HBox alignment="CENTER" prefHeight="400.0" prefWidth="800.0" spacing="50.0">
               <children>
                  <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/IntersectionDiagram.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/LaneDiagram.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="800.0" spacing="150.0">
               <children>
                  <Button fx:id="intersectionBtn" mnemonicParsing="false" onAction="#onIntersectionClick" prefHeight="100.0" prefWidth="200.0" text="Intersection Claim" />
                  <Button fx:id="laneChangeBtn" mnemonicParsing="false" onAction="#onLaneChangeClick" prefHeight="100.0" prefWidth="200.0" text="Lane Change Claim" />
               </children>
            </HBox>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onBackClick" prefHeight="10.0" text="Back">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
